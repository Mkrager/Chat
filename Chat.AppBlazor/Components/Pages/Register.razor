@page "/register"
@rendermode InteractiveServer

<div class="container-form">
    <div class="form">
        <EditForm Model="@RegistrationRequest" OnValidSubmit="HandleValidSubmit">
            <h1>Register</h1>
            <DataAnnotationsValidator />
            <ValidationSummary class="error-text" />

            <div class="form-content">
                <InputText @bind-Value="RegistrationRequest.FirstName" class="form-input" placeholder="First Name" />
                <ValidationMessage For="() => RegistrationRequest.FirstName" class="error-text" />
            </div>

            <div class="form-content">
                <InputText @bind-Value="RegistrationRequest.LastName" class="form-input" placeholder="Last Name" />
                <ValidationMessage For="() => RegistrationRequest.LastName" class="error-text" />
            </div>

            <div class="form-content">
                <InputText @bind-Value="RegistrationRequest.Email" class="form-input" type="email" placeholder="Email" />
                <ValidationMessage For="() => RegistrationRequest.Email" class="error-text" />
            </div>

            <div class="form-content">
                <InputText @bind-Value="RegistrationRequest.UserName" class="form-input" placeholder="Login" />
                <ValidationMessage For="() => RegistrationRequest.UserName" class="error-text" />
            </div>

            <div class="form-password">
                <InputText @bind-Value="RegistrationRequest.Password" class="form-input password" type="password" placeholder="Password" />
                <ValidationMessage For="() => RegistrationRequest.Password" class="error-text" />
            </div>

            <button type="submit" class="form-btn">Register</button>

            <p class="form-loggined">Already registered? <a href="/login">Sign-in!</a></p>

            <span class="label label-error">@Message</span>
        </EditForm>
    </div>
</div>