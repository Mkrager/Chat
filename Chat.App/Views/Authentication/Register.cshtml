@model RegistrationRequest

<div class="container-form">
    <div class="form">
        <h1>Register</h1>

        <form asp-controller="Authentication" asp-action="Register" method="post" id="registerForm">
            <div asp-validation-summary="All" class="error-text"></div>

            <div class="form-content">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-input" placeholder=" " required />
                <span asp-validation-for="FirstName" class="error-text"></span>
            </div>

            <div class="form-content">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-input" placeholder=" " required />
                <span asp-validation-for="LastName" class="error-text"></span>
            </div>

            <div class="form-content">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" class="form-input" placeholder=" " required />
                <span asp-validation-for="Email" class="error-text"></span>
            </div>

            <div class="form-content">
                <label asp-for="UserName">Login</label>
                <input asp-for="UserName" class="form-input" placeholder=" " required />
                <span asp-validation-for="UserName" class="error-text"></span>
            </div>

            <div class="form-content">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-input password" placeholder=" " required />
                <span asp-validation-for="Password" class="error-text"></span>
            </div>

            <button type="submit" class="form-btn">Register</button>

            <p class="form-loggined">
                Already registered? <a href="/login">Sign-in!</a>
            </p>
        </form>
    </div>
</div>
